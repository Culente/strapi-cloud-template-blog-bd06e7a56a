{
  "info": {
    "name": "Strapi News & Test-Single-Type API",
    "description": "基于Strapi项目的API集合，主要包含新闻(news)和测试单例类型(test-single-type)接口，支持多语言和动态内容",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "2.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{strapi_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:1337",
      "type": "string"
    },
    {
      "key": "strapi_token",
      "value": "YOUR_API_TOKEN_HERE",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "News (新闻)",
      "item": [
        {
          "name": "获取新闻列表",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/newses?populate=*&sort=publishDate:desc&pagination[page]=1&pagination[pageSize]=10",
              "host": ["{{base_url}}"],
              "path": ["api", "newses"],
              "query": [
                {
                  "key": "populate",
                  "value": "*"
                },
                {
                  "key": "sort",
                  "value": "publishDate:desc"
                },
                {
                  "key": "pagination[page]",
                  "value": "1"
                },
                {
                  "key": "pagination[pageSize]",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "获取新闻详情",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/newses/1?populate=*",
              "host": ["{{base_url}}"],
              "path": ["api", "newses", "1"],
              "query": [
                {
                  "key": "populate",
                  "value": "*"
                }
              ]
            }
          }
        },
        {
          "name": "多语言新闻列表",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/newses?locale=zh&populate=*&sort=publishDate:desc",
              "host": ["{{base_url}}"],
              "path": ["api", "newses"],
              "query": [
                {
                  "key": "locale",
                  "value": "zh"
                },
                {
                  "key": "populate",
                  "value": "*"
                },
                {
                  "key": "sort",
                  "value": "publishDate:desc"
                }
              ]
            }
          }
        },
        {
          "name": "按发布日期筛选新闻",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/newses?filters[publishDate][$gte]=2024-01-01&filters[publishDate][$lte]=2024-12-31&populate=*&sort=publishDate:desc",
              "host": ["{{base_url}}"],
              "path": ["api", "newses"],
              "query": [
                {
                  "key": "filters[publishDate][$gte]",
                  "value": "2024-01-01"
                },
                {
                  "key": "filters[publishDate][$lte]",
                  "value": "2024-12-31"
                },
                {
                  "key": "populate",
                  "value": "*"
                },
                {
                  "key": "sort",
                  "value": "publishDate:desc"
                }
              ]
            }
          }
        },
        {
          "name": "搜索新闻标题",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/newses?filters[title][$containsi]=关键词&populate=*&sort=publishDate:desc",
              "host": ["{{base_url}}"],
              "path": ["api", "newses"],
              "query": [
                {
                  "key": "filters[title][$containsi]",
                  "value": "关键词"
                },
                {
                  "key": "populate",
                  "value": "*"
                },
                {
                  "key": "sort",
                  "value": "publishDate:desc"
                }
              ]
            }
          }
        },
        {
          "name": "创建新闻",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"title\": \"新闻标题\",\n    \"content\": [\n      {\n        \"__component\": \"shared.rich-text\",\n        \"body\": \"<p>新闻内容</p>\"\n      }\n    ],\n    \"publishDate\": \"2024-01-01\",\n    \"comp\": [\n      {\n        \"title\": \"组件标题\",\n        \"desc\": \"组件描述\"\n      }\n    ],\n    \"publishedAt\": \"2024-01-01T00:00:00.000Z\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/newses",
              "host": ["{{base_url}}"],
              "path": ["api", "newses"]
            }
          }
        },
        {
          "name": "更新新闻",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"title\": \"更新后的新闻标题\",\n    \"publishDate\": \"2024-01-02\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/newses/1",
              "host": ["{{base_url}}"],
              "path": ["api", "newses", "1"]
            }
          }
        },
        {
          "name": "删除新闻",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/newses/1",
              "host": ["{{base_url}}"],
              "path": ["api", "newses", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Test-Single-Type (测试单例类型)",
      "item": [
        {
          "name": "获取测试单例类型",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/test-single-type?populate=*",
              "host": ["{{base_url}}"],
              "path": ["api", "test-single-type"],
              "query": [
                {
                  "key": "populate",
                  "value": "*"
                }
              ]
            }
          }
        },
        {
          "name": "更新测试单例类型",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"title\": \"更新后的测试标题\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/test-single-type",
              "host": ["{{base_url}}"],
              "path": ["api", "test-single-type"]
            }
          }
        },
        {
          "name": "发布测试单例类型",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"title\": \"测试标题\",\n    \"publishedAt\": \"2024-01-01T00:00:00.000Z\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/test-single-type",
              "host": ["{{base_url}}"],
              "path": ["api", "test-single-type"]
            }
          }
        }
      ]
    },
    {
      "name": "Shared Components (共享组件)",
      "item": [
        {
          "name": "获取Test-Contents组件",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/components/shared/test-conents",
              "host": ["{{base_url}}"],
              "path": ["api", "components", "shared", "test-conents"]
            }
          }
        },
        {
          "name": "获取所有共享组件",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/components",
              "host": ["{{base_url}}"],
              "path": ["api", "components"]
            }
          }
        }
      ]
    },
    {
      "name": "Advanced News Queries (高级新闻查询)",
      "item": [
        {
          "name": "多语言新闻复杂查询",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/newses?locale=zh&filters[$and][0][publishDate][$gte]=2024-01-01&filters[$and][1][title][$containsi]=重要&populate[cover]=*&populate[comp][populate]=*&sort=publishDate:desc&pagination[page]=1&pagination[pageSize]=5",
              "host": ["{{base_url}}"],
              "path": ["api", "newses"],
              "query": [
                {
                  "key": "locale",
                  "value": "zh"
                },
                {
                  "key": "filters[$and][0][publishDate][$gte]",
                  "value": "2024-01-01"
                },
                {
                  "key": "filters[$and][1][title][$containsi]",
                  "value": "重要"
                },
                {
                  "key": "populate[cover]",
                  "value": "*"
                },
                {
                  "key": "populate[comp][populate]",
                  "value": "*"
                },
                {
                  "key": "sort",
                  "value": "publishDate:desc"
                },
                {
                  "key": "pagination[page]",
                  "value": "1"
                },
                {
                  "key": "pagination[pageSize]",
                  "value": "5"
                }
              ]
            }
          }
        },
        {
          "name": "新闻字段选择查询",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/newses?fields[0]=title&fields[1]=publishDate&populate[cover][fields][0]=url&populate[cover][fields][1]=alternativeText&populate[comp][fields][0]=title&populate[comp][fields][1]=desc&sort=publishDate:desc",
              "host": ["{{base_url}}"],
              "path": ["api", "newses"],
              "query": [
                {
                  "key": "fields[0]",
                  "value": "title"
                },
                {
                  "key": "fields[1]",
                  "value": "publishDate"
                },
                {
                  "key": "populate[cover][fields][0]",
                  "value": "url"
                },
                {
                  "key": "populate[cover][fields][1]",
                  "value": "alternativeText"
                },
                {
                  "key": "populate[comp][fields][0]",
                  "value": "title"
                },
                {
                  "key": "populate[comp][fields][1]",
                  "value": "desc"
                },
                {
                  "key": "sort",
                  "value": "publishDate:desc"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}


