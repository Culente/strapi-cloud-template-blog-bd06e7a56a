{
  "info": {
    "name": "Strapi Demo Project API",
    "description": "基于Strapi演示项目的API集合，包含文章、作者、分类、全局设置等接口",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{strapi_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:1337",
      "type": "string"
    },
    {
      "key": "strapi_token",
      "value": "YOUR_API_TOKEN_HERE",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Articles (文章)",
      "item": [
        {
          "name": "获取文章列表",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/articles?populate=*&sort=publishedAt:desc&pagination[page]=1&pagination[pageSize]=10",
              "host": ["{{base_url}}"],
              "path": ["api", "articles"],
              "query": [
                {
                  "key": "populate",
                  "value": "*"
                },
                {
                  "key": "sort",
                  "value": "publishedAt:desc"
                },
                {
                  "key": "pagination[page]",
                  "value": "1"
                },
                {
                  "key": "pagination[pageSize]",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "获取文章详情",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/articles/1?populate=*",
              "host": ["{{base_url}}"],
              "path": ["api", "articles", "1"],
              "query": [
                {
                  "key": "populate",
                  "value": "*"
                }
              ]
            }
          }
        },
        {
          "name": "通过Slug获取文章",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/articles?filters[slug][$eq]=article-slug&populate=*",
              "host": ["{{base_url}}"],
              "path": ["api", "articles"],
              "query": [
                {
                  "key": "filters[slug][$eq]",
                  "value": "article-slug"
                },
                {
                  "key": "populate",
                  "value": "*"
                }
              ]
            }
          }
        },
        {
          "name": "按分类筛选文章",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/articles?filters[category][name][$eq]=技术&populate=cover,author,category&sort=publishedAt:desc",
              "host": ["{{base_url}}"],
              "path": ["api", "articles"],
              "query": [
                {
                  "key": "filters[category][name][$eq]",
                  "value": "技术"
                },
                {
                  "key": "populate",
                  "value": "cover,author,category"
                },
                {
                  "key": "sort",
                  "value": "publishedAt:desc"
                }
              ]
            }
          }
        },
        {
          "name": "按作者筛选文章",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/articles?filters[author][name][$eq]=作者姓名&populate=cover,category&sort=publishedAt:desc",
              "host": ["{{base_url}}"],
              "path": ["api", "articles"],
              "query": [
                {
                  "key": "filters[author][name][$eq]",
                  "value": "作者姓名"
                },
                {
                  "key": "populate",
                  "value": "cover,category"
                },
                {
                  "key": "sort",
                  "value": "publishedAt:desc"
                }
              ]
            }
          }
        },
        {
          "name": "搜索文章",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/articles?filters[title][$containsi]=关键词&populate=cover,author,category",
              "host": ["{{base_url}}"],
              "path": ["api", "articles"],
              "query": [
                {
                  "key": "filters[title][$containsi]",
                  "value": "关键词"
                },
                {
                  "key": "populate",
                  "value": "cover,author,category"
                }
              ]
            }
          }
        },
        {
          "name": "创建文章",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"title\": \"新文章标题\",\n    \"description\": \"文章描述\",\n    \"slug\": \"new-article-slug\",\n    \"author\": 1,\n    \"category\": 1,\n    \"blocks\": [\n      {\n        \"__component\": \"shared.rich-text\",\n        \"body\": \"<p>文章内容</p>\"\n      }\n    ],\n    \"publishedAt\": \"2024-01-01T00:00:00.000Z\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/articles",
              "host": ["{{base_url}}"],
              "path": ["api", "articles"]
            }
          }
        },
        {
          "name": "更新文章",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"title\": \"更新后的标题\",\n    \"description\": \"更新后的描述\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/articles/1",
              "host": ["{{base_url}}"],
              "path": ["api", "articles", "1"]
            }
          }
        },
        {
          "name": "删除文章",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/articles/1",
              "host": ["{{base_url}}"],
              "path": ["api", "articles", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Authors (作者)",
      "item": [
        {
          "name": "获取作者列表",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/authors?populate=*&sort=name:asc",
              "host": ["{{base_url}}"],
              "path": ["api", "authors"],
              "query": [
                {
                  "key": "populate",
                  "value": "*"
                },
                {
                  "key": "sort",
                  "value": "name:asc"
                }
              ]
            }
          }
        },
        {
          "name": "获取作者详情",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/authors/1?populate=*",
              "host": ["{{base_url}}"],
              "path": ["api", "authors", "1"],
              "query": [
                {
                  "key": "populate",
                  "value": "*"
                }
              ]
            }
          }
        },
        {
          "name": "获取作者的文章",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/authors/1?populate[articles][populate]=cover,category&populate[articles][sort]=publishedAt:desc",
              "host": ["{{base_url}}"],
              "path": ["api", "authors", "1"],
              "query": [
                {
                  "key": "populate[articles][populate]",
                  "value": "cover,category"
                },
                {
                  "key": "populate[articles][sort]",
                  "value": "publishedAt:desc"
                }
              ]
            }
          }
        },
        {
          "name": "创建作者",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"name\": \"新作者\",\n    \"email\": \"author@example.com\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/authors",
              "host": ["{{base_url}}"],
              "path": ["api", "authors"]
            }
          }
        }
      ]
    },
    {
      "name": "Categories (分类)",
      "item": [
        {
          "name": "获取分类列表",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/categories?populate=*&sort=name:asc",
              "host": ["{{base_url}}"],
              "path": ["api", "categories"],
              "query": [
                {
                  "key": "populate",
                  "value": "*"
                },
                {
                  "key": "sort",
                  "value": "name:asc"
                }
              ]
            }
          }
        },
        {
          "name": "获取分类详情",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/categories/1?populate=*",
              "host": ["{{base_url}}"],
              "path": ["api", "categories", "1"],
              "query": [
                {
                  "key": "populate",
                  "value": "*"
                }
              ]
            }
          }
        },
        {
          "name": "获取分类的文章",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/categories/1?populate[articles][populate]=cover,author&populate[articles][sort]=publishedAt:desc",
              "host": ["{{base_url}}"],
              "path": ["api", "categories", "1"],
              "query": [
                {
                  "key": "populate[articles][populate]",
                  "value": "cover,author"
                },
                {
                  "key": "populate[articles][sort]",
                  "value": "publishedAt:desc"
                }
              ]
            }
          }
        },
        {
          "name": "创建分类",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"name\": \"新分类\",\n    \"slug\": \"new-category\",\n    \"description\": \"分类描述\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/categories",
              "host": ["{{base_url}}"],
              "path": ["api", "categories"]
            }
          }
        }
      ]
    },
    {
      "name": "Global (全局设置)",
      "item": [
        {
          "name": "获取全局设置",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/global?populate=*",
              "host": ["{{base_url}}"],
              "path": ["api", "global"],
              "query": [
                {
                  "key": "populate",
                  "value": "*"
                }
              ]
            }
          }
        },
        {
          "name": "获取SEO设置",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/global?populate[defaultSeo][populate]=*",
              "host": ["{{base_url}}"],
              "path": ["api", "global"],
              "query": [
                {
                  "key": "populate[defaultSeo][populate]",
                  "value": "*"
                }
              ]
            }
          }
        },
        {
          "name": "更新全局设置",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"siteName\": \"更新后的网站名称\",\n    \"siteDescription\": \"更新后的网站描述\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/global",
              "host": ["{{base_url}}"],
              "path": ["api", "global"]
            }
          }
        }
      ]
    },
    {
      "name": "About (关于页面)",
      "item": [
        {
          "name": "获取关于页面",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/about?populate[blocks][populate]=*",
              "host": ["{{base_url}}"],
              "path": ["api", "about"],
              "query": [
                {
                  "key": "populate[blocks][populate]",
                  "value": "*"
                }
              ]
            }
          }
        },
        {
          "name": "更新关于页面",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"title\": \"关于我们\",\n    \"blocks\": [\n      {\n        \"__component\": \"shared.rich-text\",\n        \"body\": \"<p>关于我们的内容</p>\"\n      }\n    ]\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/about",
              "host": ["{{base_url}}"],
              "path": ["api", "about"]
            }
          }
        }
      ]
    },
    {
      "name": "Media (媒体文件)",
      "item": [
        {
          "name": "获取媒体文件列表",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/upload/files?sort=createdAt:desc&pagination[page]=1&pagination[pageSize]=20",
              "host": ["{{base_url}}"],
              "path": ["api", "upload", "files"],
              "query": [
                {
                  "key": "sort",
                  "value": "createdAt:desc"
                },
                {
                  "key": "pagination[page]",
                  "value": "1"
                },
                {
                  "key": "pagination[pageSize]",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "上传媒体文件",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "files",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "fileInfo",
                  "value": "{\"alternativeText\":\"图片描述\",\"caption\":\"图片标题\"}",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/upload",
              "host": ["{{base_url}}"],
              "path": ["api", "upload"]
            }
          }
        },
        {
          "name": "删除媒体文件",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/upload/files/1",
              "host": ["{{base_url}}"],
              "path": ["api", "upload", "files", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Advanced Queries (高级查询)",
      "item": [
        {
          "name": "复杂过滤查询",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/articles?filters[$and][0][publishedAt][$notNull]=true&filters[$and][1][category][name][$eq]=技术&filters[$and][2][title][$containsi]=React&populate=*&sort=publishedAt:desc&pagination[page]=1&pagination[pageSize]=5",
              "host": ["{{base_url}}"],
              "path": ["api", "articles"],
              "query": [
                {
                  "key": "filters[$and][0][publishedAt][$notNull]",
                  "value": "true"
                },
                {
                  "key": "filters[$and][1][category][name][$eq]",
                  "value": "技术"
                },
                {
                  "key": "filters[$and][2][title][$containsi]",
                  "value": "React"
                },
                {
                  "key": "populate",
                  "value": "*"
                },
                {
                  "key": "sort",
                  "value": "publishedAt:desc"
                },
                {
                  "key": "pagination[page]",
                  "value": "1"
                },
                {
                  "key": "pagination[pageSize]",
                  "value": "5"
                }
              ]
            }
          }
        },
        {
          "name": "日期范围查询",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/articles?filters[publishedAt][$gte]=2024-01-01&filters[publishedAt][$lte]=2024-12-31&populate=cover,author,category&sort=publishedAt:desc",
              "host": ["{{base_url}}"],
              "path": ["api", "articles"],
              "query": [
                {
                  "key": "filters[publishedAt][$gte]",
                  "value": "2024-01-01"
                },
                {
                  "key": "filters[publishedAt][$lte]",
                  "value": "2024-12-31"
                },
                {
                  "key": "populate",
                  "value": "cover,author,category"
                },
                {
                  "key": "sort",
                  "value": "publishedAt:desc"
                }
              ]
            }
          }
        },
        {
          "name": "字段选择查询",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/articles?fields[0]=title&fields[1]=description&fields[2]=slug&fields[3]=publishedAt&populate[cover][fields][0]=url&populate[author][fields][0]=name&populate[category][fields][0]=name",
              "host": ["{{base_url}}"],
              "path": ["api", "articles"],
              "query": [
                {
                  "key": "fields[0]",
                  "value": "title"
                },
                {
                  "key": "fields[1]",
                  "value": "description"
                },
                {
                  "key": "fields[2]",
                  "value": "slug"
                },
                {
                  "key": "fields[3]",
                  "value": "publishedAt"
                },
                {
                  "key": "populate[cover][fields][0]",
                  "value": "url"
                },
                {
                  "key": "populate[author][fields][0]",
                  "value": "name"
                },
                {
                  "key": "populate[category][fields][0]",
                  "value": "name"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
